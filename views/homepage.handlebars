  <div class="col-4 p-3 light-card">
    <header class="border-0 p-2 ">
      <h3><a href="/post/{{post.id}}" class="text-white">{{post.title}}</a></h3>
    </header>
    <footer class="p-0 text-end">
       <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
    </footer>
  </div>
  <div class="col-6 ml-5 light-card p-3">
    <article>
      <p>{{post.content}}</p>
    </article>
  </div>
</section>
{{/each}}