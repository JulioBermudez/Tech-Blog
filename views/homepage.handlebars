{{#each posts as |post| }}
<section class="d-flex flex-row m-5 text-white">
  <div class="col-10 p-3 light-card m-3 mt-1">
    <header class="border-0 p-2 text-center">
      <h3><a href="/post/{{post.id}}" class="text-white">{{post.title}}</a></h3>
    </header>
  </div>
  <div class="col-10 m-3 light-card p-3 mt-1">
    <article>
      <p>{{post.content}}</p>
    </article>
    <footer class="p-0 text-end">
       <p>Created by <span class="text-danger">{{post.user.username}}</span> on {{format_date post.date_created}}</p>
    </footer>
  </div>
</section>
{{/each}}